<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to t("views.layouts.header.sample"),root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t("views.layouts.header.home"),root_path %></li>
            <li><%= link_to t("views.layouts.header.help"),help_path %></li>
            <% if logged_in? %>
          <li><%= link_to t("views.layouts.header.Users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <span> <%= t("views.layouts.header.account")%> </span>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.layouts.header.Profile"), current_user %></li>
              <li><%= link_to t("views.layouts.header.Settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.layouts.header.Logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
            <li><%= link_to t("views.layouts.header.login"),login_path %></li>
             <% end %>
          </ul>
        </nav>
      </div>
</header>
